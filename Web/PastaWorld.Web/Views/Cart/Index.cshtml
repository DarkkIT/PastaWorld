@using PastaWorld.Data.Models
@model IEnumerable<CartItem>

<div class=" row justify-content-center">

    <div class="">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Meal.Name
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @(item.Meal.Price*@item.Quantity)
                    </td>
                </tr>
            }
        </table>
    </div>


</div>